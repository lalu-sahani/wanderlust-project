<% layout("/layouts/boilerplate.ejs") %>
<body>
  <br><br>
   
<div class="row mt-3">
   <div class="col-8 offset-2">
     <h1>Create a New List</h1>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" placeholder="enter book title" class="form-control" required>
             <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="mb-3">
           <label for="description" class="form-label">Description</label>
           <textarea class="form-control" name="listing[description]" id="" placeholder="enter description" required></textarea>
           <div class="invalid-feedback">Description should be valid</div>
        </div>
        <!-- <div class="mb-3">
            <label for="image" class="form-labeIl">Image link</label>
             <input class="form-control"  type="text" name="listing[image]" placeholder="enter image url">
        </div> -->
        <div class="mb-3">
            <label for="image" class="form-labeIl">Upload Image</label>
             <input class="form-control"  type="file" name="listing[image]" >
        </div>
    <div class="row">
        <div class=" col-4 mb-3">
            <label for="price" class="form-labeIl">Price</label>
            <input class="form-control" type="number" name="listing[price]" placeholder="enter price" required>
            <div class="invalid-feedback">Price should be valid</div>
        </div>
        <div class=" col-8 mb-3">
              <label for="country" class="form-labeIl">Country</label>
             <input class="form-control" type="text" name="listing[country]" placeholder="enter country name" required>
             <div class="invalid-feedback">Country name should be valid</div>
        </div>
    </div>
       <div class="mb-3">
            <label for="location" class="form-labeIl">Location</label>
            <input class="form-control"  type="text" name="listing[location]" placeholder="enter location" required >
            <div class="invalid-feedback">Location should be valid</div>
       </div>
        <br>
        
        <button class="btn btn-dark">add</button>
        <br><br><br>
    </form>
   </div> 
 </div>   
</body>
</html>